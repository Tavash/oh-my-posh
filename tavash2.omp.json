{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh3/main/themes/schema.json",
  "final_space": true,
  "console_title": true,
  "console_title_style": "template",
  "console_title_template": "{{if .Root}}root :: {{end}}{{.Shell}} :: {{.Folder}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "root",
          "style": "diamond",
          "foreground": "#ffff66",
          "properties": {
            "root_icon": "\uF0E7",
            "postfix": "<#7a7a7a> \ue0b1</>"
          }
        },
        {
          "type": "path",
          "style": "diamond",
          "foreground": "#fafafa",
          "properties": {
            "prefix": "<#f2f200> \ufc6e </>",
            "style": "agnoster_short",
            "enable_hyperlink": true,
            "home_icon": "\uf46d"
          }
        },
        {
          "type": "git",
          "style": "diamond",
          "foreground": "#ffeb3b",
          "properties": {
            "display_stash_count": true,
            "display_upstream_icon": true,
            "display_status": true,
            "status_colors_enabled": true,
            "color_background": false,
            "local_changes_color": "#ffeb3b",
            "working_color": "#E84855",
            "staging_color": "#2FDA4E",
            "ahead_color": "#2EC4B6",
            "behind_color": "#8A4FFF",
            "prefix": "<#7a7a7a>\ue0b1 </>"
          }
        },
        {
          "type": "text",
          "style": "diamond",
          "foreground": "#fafafa",
          "trailing_diamond": "<#7a7a7a> \ue0b1</>",
          "properties": {
            "text": "",
            "postfix": "",
            "prefix": ""
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [ 
        {
          "type": "text",
          "style": "diamond",
          "foreground": "#fafafa",
          "leading_diamond": "<#7a7a7a> \ue0b3</>",
          "properties": {
            "text": "",
            "prefix": "",
            "postfix": ""
          }
        },        
        {
          "type": "command",
          "style": "plain",
          "foreground": "#fafafa",
          "properties": {
            "shell": "bash",
            "command": "[[ ! -z $(ifconfig | grep '10.11.208.94') ]] && echo -e '\\e[1;32m\uf700 \\e[38;2;250;250;250;250mVPN' || echo -e '\\e[1;31m\uf701 \\e[38;2;250;250;250;250mVPN'",
            "postfix": "<#7a7a7a> \ue0b3</>"
          }
        },
        {
          "type": "az",
          "style": "diamond",
          "foreground": "#fafafa",
          "properties": {
            "display_id": false,
            "display_name": true,
            "prefix": "<#0078d4> \uFD03 </>",
            "postfix": "<#7a7a7a> \ue0b3</>"
          }
        },
        {
          "type": "kubectl",
          "style": "diamond",
          "foreground": "#fafafa",
          "properties": {
            "prefix": "<#3371e3> \uFD31 </>",
            "postfix": "<#7a7a7a> \ue0b3</>"
          }
        },
        {
          "type": "node",
          "style": "diamond",
          "foreground": "#6CA35E",
          "properties": {
            "prefix": " \uE718 ",
            "postfix": "<#7a7a7a> \ue0b3</>"
          }
        },
        {
          "type": "python",
          "style": "diamond",
          "foreground": "#96E072",
          "properties": {
            "prefix": " \uE235 ",
            "postfix": "<#7a7a7a> \ue0b3</>"
          }
        },
        {
          "type": "dotnet",
          "style": "diamond",
          "foreground": "#3891A6",
          "properties": {
            "prefix": " \uE77F ",
            "postfix": "<#7a7a7a> \ue0b3</>"
          }
        },
        {
          "type": "time",
          "style": "diamond",
          "foreground": "#fafafa",
          "properties": {
            "time_format": "15:04:05",
            "postfix": "<#007ACC> \uf64f </>"
          }
        }
      ]
    },
    {
      "type": "newline"
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#7a7a7a",
          "properties": {
            "text": "\u276F"
          }
        }
      ]
    }
  ]
}
